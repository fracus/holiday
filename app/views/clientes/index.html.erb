<h1>Lista de clientes</h1>

<table>
  <tr>
    <th>Apellido</th>
    <th>Nombre</th>
    <th>Empresa</th>
    <th>Email</th>
    <th>Ingreso</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clientes.each do |cliente| %>
  <tr>
    <td><%= cliente.apellido %></td>
    <td><%= cliente.nombre %></td>
    <td><%= cliente.empresa %></td>
    <td><%= cliente.email %></td>
    <td><%= cliente.ingreso %></td>
    <td><%= link_to 'Ver', cliente %></td>
    <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
    <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Cliente', new_cliente_path %>
